<p id="notice"><%= notice %></p>

<h1>Listing Alunos</h1>

<table>
  <thead>
    <tr>
      <th>Matricula</th>
      <th>Cpf</th>
      <th>Nome</th>
      <th>Email</th>
      <th>Telefone</th>
      <th>Dtmatricula</th>
      <th>Dtnascimento</th>
    </tr>
  </thead>

  <tbody>
    <% @alunos.each do |aluno| %>
      <tr>
        <td><%= aluno.matricula %></td>
        <td><%= aluno.cpf %></td>
        <td><%= aluno.nome %></td>
        <td><%= aluno.email %></td>
        <td><%= aluno.telefone %></td>
        <td><%= aluno.dtmatricula %></td>
        <td><%= aluno.dtnascimento %></td>
        <td>
          <%= link_to ' ', edit_aluno_path(aluno), class: "glyphicon glyphicon-pencil" %>
          <%= link_to ' ', aluno, method: :delete, data: { confirm: 'Are you sure?' } , class: "glyphicon glyphicon-trash" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Aluno', new_aluno_path %>
