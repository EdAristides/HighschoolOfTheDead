<%= form_for(@aluno) do |f| %>
  <% if @aluno.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@aluno.errors.count, "error") %> prohibited this aluno from being saved:</h2>

      <ul>
      <% @aluno.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :matricula %><br>
    <%= f.text_field :matricula %>
  </div>
  <div class="field">
    <%= f.label :cpf %><br>
    <%= f.text_field :cpf %>
  </div>
  <div class="field">
    <%= f.label :nome %><br>
    <%= f.text_field :nome %>
  </div>
  <div class="field">
    <%= f.label :sexo %><br>
    <%= f.radio_button :sexo, 'M', :checked => true %> Masculino
    <%= f.radio_button :sexo, 'F' %> Feminino
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :telefone %><br>
    <%= f.text_field :telefone %>
  </div>
  <div class="field">
    <%= f.label :dtmatricula %><br>
    <%= f.text_field :dtmatricula , class: 'datepicker' %>
  </div>
  <div class="field">
    <%= f.label :dtnascimento %><br>
    <%= f.text_field :dtnascimento , class: 'datepicker' %>
  </div>
  <div>
  <div>
    <%= f.label :foto %>
    <%= image_tag @aluno.foto_url, class: 'foto' if @aluno.foto? %>
    <%= f.file_field :foto, label: 'Foto' , input_html: {accept: ('application/jpg') } %>
    <br/>
  </div>
  <div class="actions">
    <%= f.submit 'Salvar', :class => 'btn btn-primary' %>
    <%= link_to ' Voltar', alunos_path , class: "btn btn-default " %>
  </div>
<% end %>

<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker({format: 'yyyy-mm-dd'});
    $('#matricula').inputmask("999999999999");
  });
</script>