<%= form_for(@professore) do |f| %>
  <% if @professore.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@professore.errors.count, "error") %> prohibited this professore from being saved:</h2>

      <ul>
      <% @professore.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div id="formulario">
    <div class="field">
      <!--<%= f.label :siape %>-->
      Siape<br>
      <%= f.text_field :siape %>
    </div>
    <div class="field">
      <!--<%= f.label :cpf %>-->
      CPF<br>
      <%= f.text_field :cpf %>
    </div>
    <div class="field">
      <!--<%= f.label :nome %>-->
      Nome<br>
      <%= f.text_field :nome %>
    </div>
    <div class="field">
      <!--<%= f.label :sexo %>-->
      Sexo<br>
      <%= f.radio_button :sexo, 'M', :checked => true %> Masculino
      <%= f.radio_button :sexo, 'F' %> Feminino
    </div>
    <div class="field">
      <!--<%= f.label :email %>-->
      E-mail<br>
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <!--<%= f.label :telefone %>-->
      Telefone<br>
      <%= f.text_field :telefone %>
    </div>
    <div class="field">
      <!--<%= f.label :dtnascimento %>-->
      Data de Nascimento<br>
      <%= f.text_field :dtnascimento , class: 'datepicker' %>
    </div>
    <div>
      <%= f.label :foto %>
      <%= image_tag @professore.foto_url, class: 'foto' if @professore.foto? %>
      <%= f.file_field :foto, label: 'Foto' , input_html: {accept: ('application/jpg') } %>
      <br/>
    </div>
    <div class="actions">
      <%= f.submit 'Salvar', :class => 'btn btn-primary' %>
      <%= link_to 'Voltar', professores_path , class: "btn btn-default " %>
    </div>
  </div>
<% end %>

<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker({format: 'yyyy-mm-dd'});
    $('#siape').inputmask("9999999");
  });
</script>